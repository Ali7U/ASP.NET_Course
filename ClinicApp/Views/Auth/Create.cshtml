@model CreateUserVM

<form method="post">
    <h1>Create User</h1>
    <div class="text-danger" asp-validation-summary="ModelOnly">
    </div>
    
    <div class="form-floating mb-2">
        <input class="form-control" asp-for="Email" />
        <label asp-for="Email"></label>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    
    <div class="form-floating mb-2">
        <input class="form-control" asp-for="Password" />
        <label asp-for="Password"></label>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    
    <div class="form-floating mb-2">
        <input class="form-control" asp-for="ConfirmPassword" />
        <label asp-for="ConfirmPassword"></label>
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    
    <div class="form-floating mb-2">
        <select class="form-control" asp-for="Role" asp-items="new SelectList(Enum.GetNames<AppRoles>())"></select>
        <label asp-for="Role"></label>
        <span class="text-danger" asp-validation-for="Role"></span>
    </div>
    
    <div class="form-floating mb-2">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>